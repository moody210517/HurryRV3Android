<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/lin_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_scrollFlags="enterAlways|snap" >


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:id="@+id/lin_location"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.skyfishjy.library.RippleBackground
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/content"
                    app:rb_color="#0099CC"
                    app:rb_radius="18dp"
                    app:rb_rippleAmount="2"
                    app:rb_duration="3000"
                    app:rb_scale="2">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_location"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />

                </com.skyfishjy.library.RippleBackground>
            </LinearLayout>



            <TextView
                android:layout_marginLeft="0dp"
                android:id="@+id/txt_title"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/lin_location"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:text="Hyderabad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/lin_share"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_marginRight="@dimen/dimen_10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_share"
                    android:background="@mipmap/ic_share"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_rate"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_toLeftOf="@+id/lin_share"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_rate"
                    android:background="@mipmap/ic_rate"
                    android:layout_width="28dp"
                    android:layout_height="28dp" />
            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>